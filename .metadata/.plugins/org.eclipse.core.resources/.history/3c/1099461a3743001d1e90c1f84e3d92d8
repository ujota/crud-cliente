package br.edu.unasp.clientes.services;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import br.edu.unasp.clientes.model.Cliente;
import br.edu.unasp.clientes.repository.ClienteRepository;

@Service
public class ClienteService {
	
	@Autowired
	private ClienteRepository repository;
	
	public Iterable<Cliente> getCliente(){
		return repository.findAll();
	}
	
	public void createCliente(Cliente cliente) {
		repository.save(cliente);
	}
	public Cliente getCliente(Long id) {
		return repository.findById(id).orElse(null);
	}
	public void updateCliente(Cliente cliente) {
		repository.save(cliente);
	}
	public void deleteCliente(Cliente cliente) {
		ClienteService clienteS = new ClienteService(Long id);
		Long idInput = null;
		clienteS.getCliente(idInput);
		if(id)
		repository.delete(cliente);
	}

}
